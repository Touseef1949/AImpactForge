# Rename this file to .env and fill in your actual values

# Groq API Configuration
GROQ_API_KEY="YOUR_GROQ_API_KEY_HERE"

# Path to the AI Evaluation Guide PDF
# Use the full absolute path, e.g., /home/user/docs/ai_evals_guide.pdf or C:/Users/user/Documents/ai_evals_guide.pdf
AI_EVALS_GUIDE_PATH="YOUR/FULL/ABSOLUTE/PATH/TO/ai_evals_guide.pdf"

# PostgreSQL/PgVector Database Connection URL
# Format: postgresql+psycopg://<user>:<password>@<host>:<port>/<database>
# Default for the optional docker-compose setup:
PGVECTOR_DB_URL="postgresql+psycopg://ai:ai@localhost:5532/ai"

# Optional: Ollama base URL if not running on default http://localhost:11434
# OLLAMA_BASE_URL="http://localhost:11434"
